@model Tuple<List<FootballApp.Models.Player>, List<FootballApp.Models.PlayerPosition>, int>
<div style="float: left;margin: 70px 0 0px 0; width: 5%; height:20px; min-width: 55px">
    <img src="~/Content/images/ball1.png" height="50" width="50" />
</div>
<div style="float: left;margin: 70px 0 20px 0; width: 90%">
    <h2 style="margin: 5px 0 3px 0;">
        Добавление игрока
    </h2>
</div>
<div style="margin: 20px 0 10px 0; width: 30%" class="col-lg-4">
    @using (Html.BeginForm("AddPlayerIn1Team", "EditMatch", FormMethod.Post))
    {
        <div class="form-group row">
            <label>Игрок</label>
            <select class="form-control" id="PlayerId" name="PlayerId">
                @foreach (FootballApp.Models.Player player in Model.Item1)
                {
                    <option value=@player.PlayerId>@player.FullName</option>
                }
            </select>
        </div>
        <div class="form-group row">
            <label>Позиция в команде</label>
            <select class="form-control" id="PositionId" name="PositionId">
                @foreach (FootballApp.Models.PlayerPosition player in Model.Item2)
                {
                    <option value=@player.PlayerPositionId>@player.Name</option>
                }
            </select>
        </div>
        <input type="hidden" value=@Model.Item3 name="TeamId" />
        <div class="form-group row">
            <input type="submit" class="btn btn-primary mb-2" value="Добавить">
        </div>
    }
</div>