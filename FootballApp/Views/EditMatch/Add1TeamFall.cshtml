@model Tuple<FootballApp.Models.PlayerFall, List<FootballApp.Models.Contravention>, int, int>



    
        <div style="float: left;margin: 70px 0 0px 0; width: 5%; height:20px; min-width: 55px">
            <img src="~/Content/images/ball1.png" height="50" width="50" />
        </div>
        <div style="float: left;margin: 70px 0 20px 0; width: 90%">
            <h2 style="margin: 5px 0 3px 0;">
                Добавление нарушения
            </h2>
        </div>
        <div style="margin: 20px 0 10px 0; width: 30%" class="col-lg-4">
            @using (Html.BeginForm("AddFall", "EditMatch", FormMethod.Post))
            {
                <div class="form-group row">
                    <label>Игрок</label>
                    <select class="form-control" disabled >
                        <option value=@Model.Item1.PlayerId>@Model.Item1.PlayerName</option>
                    </select>
                </div>
                <div class="form-group row">
                    <label>Матч</label>
                    <select class="form-control" disabled >
                        <option value=@Model.Item1.MatchId>@Model.Item1.MatchName</option>
                    </select>
                </div>
                <div class="form-group row">
                    <label>Нарушение</label>
                    <select required class="form-control" id="ContraventionId" name="ContraventionId">
                        @foreach (FootballApp.Models.Contravention c in Model.Item2)
                        {
                            <option value=@c.ContraventionId>@c.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group row">
                    <label>Тайм</label>
                    <input required type="number" min="1" max="2" class="form-control" id="TeamName" name="Period">
                </div>
                <div class="form-group row">
                    <label>Время</label>
                    <input required type="number" min="0" max="45" class="form-control" name="Time">
                </div>
                <input type="hidden" value=@Model.Item1.MatchId name="MatchId" />
                <input type="hidden" value=@Model.Item1.PlayerId name="PlayerId" />
                <input type="hidden" value=@Model.Item3 name="teamNum" />
                <input type="hidden" value=@Model.Item4 name="teamId" />
                <div class="form-group row">
                    <input type="submit" class="btn btn-primary mb-2" value="Добавить">
                </div>
            }
        </div>
