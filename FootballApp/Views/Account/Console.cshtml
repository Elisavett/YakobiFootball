@model List<FootballApp.Models.User>
<div class="body-content">
    <div style="float: left;margin: 70px 0 30px 0; width: 5%; height:20px; min-width: 55px">
        <img src="~/Content/images/ball1.png" height="50" width="50" />
    </div>
    <div style="float: left;margin: 70px 0 30px 0; width: 90%">
        <h2 style="margin: 5px 0 3px 0;">
            Консоль администратора
        </h2>
    </div>
    <hr />

    @foreach (FootballApp.Models.User user in Model)
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Пользователь", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9" style="font-size: 19px">
                @user.Email
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Роль", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9" style="font-size: 19px">
                @user.Role.Name
            </div>
        </div>
        <div class="form-group col-md-12">
            @Html.ActionLink("Изменить роль", "EditRole" , new { Id = user.Id })
        </div>
    }
    </div>
