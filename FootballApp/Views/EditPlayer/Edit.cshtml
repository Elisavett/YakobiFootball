@model FootballApp.Models.Player
@{
    ViewBag.Title = "Edit";
}
<div style="float: left;margin: 70px 0 0px 0; width: 5%; height:20px; min-width: 55px">
    <img src="~/Content/images/ball1.png" height="50" width="50" />
</div>
<div style="float: left;margin: 70px 0 20px 0; width: 90%">
    <h2 style="margin: 5px 0 3px 0;">
        Редактирование игрока
    </h2>
</div>
<div style="margin: 20px 0 10px 0; width: 30%" class="col-lg-4">
    @using (Html.BeginForm("Edit", "EditPlayer", FormMethod.Post))
    {
        <input type="hidden" id="playerId" name="playerId" value=@Model.PlayerId>
        <div class="form-group row">
            <label>Имя игрока</label>
            <input required type="text" value="@Model.FullName" class="form-control" id="FullName" name="FullName">
        </div>
        <div class="form-group row col-lg-6">
            <input type="submit" class="btn btn-primary mb-2" value="Принять">
        </div>
    }
    @using (Html.BeginForm("Delete", "EditPlayer", FormMethod.Post))
    {
        <input type="hidden" id="playerId" name="playerId" value=@Model.PlayerId>
       
        <div class="form-group col-lg-6">
            <input type="submit" value="Удалить игрока" class="btn btn-primary mb-2" />
        </div>
    }
</div>
